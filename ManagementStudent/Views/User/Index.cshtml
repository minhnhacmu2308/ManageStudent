                                                            <input type="text" class="form-control" id="tenphim" name="password" value="@item.password" tabindex="1" readonly>
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Nguồn tuyển :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="nguontuyen" tabindex="1" value="@item.nguontuyen" readonly>
                                                        </div>

                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Trường chuyển :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="truongchuyen" value="@item.truongchuyen" tabindex="1" autofocus readonly>
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Dân tộc :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="dantoc" tabindex="1" value="@item.dantoc" readonly>
                                                        </div>

                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Tôn giáo :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="tongiao" value="@item.tongiao" tabindex="1" autofocus readonly>
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Quốc tịch :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="quoctinh" tabindex="1" value="@item.quoctinh" readonly>
                                                        </div>

                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Số CMND :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="cmnd" value="@item.cmnd" tabindex="1" autofocus readonly>
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Nơi cấp :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="noicap" tabindex="1" value="@item.noicap" readonly>
                                                        </div>

                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Ngày cấp :</label>
                                                            <input type="date" class="form-control" id="tenphim" name="ngaycap" value="@item.ngaycap" tabindex="1" autofocus readonly>
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Chiều cao :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="chieucao" tabindex="1" value="@item.chieucao" readonly>
                                                        </div>

                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Cân nặng :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="cannang" value="@item.cannang" tabindex="1" autofocus readonly>
                                                        </div>

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Số năm bộ đội :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="sonambodoi" tabindex="1" value="@item.sonambodoi" readonly>
                                                        </div>

                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Số năm TNXP :</label>
                                                            <input type="text" class="form-control" id="tenphim" name="sonamtnxp" value="@item.sonamtnxp" tabindex="1" autofocus readonly>
                                                        </div>

                                                    </div>
                                                </div>


                                                <div class="modal-footer">
                                                    <button style="width:100px" type="button" class="btn btn-secondary" data-bs-dismiss="modal">Đóng</button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            </div>
