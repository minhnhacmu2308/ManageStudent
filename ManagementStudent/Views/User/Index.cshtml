                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Mã sinh viên :</label>
                                                            <input type="text" class="form-control" id="dienvien" value="SV_2022_@item.id_user" name="sdt" tabindex="2" readonly required>
                                                        </div>
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Ngành :<span style="color:red">* </span>:</label>
                                                            <input type="text" class="form-control" id="tenphim" name="hoten" value="@item.Majors.name" tabindex="1" readonly required maxlength="20">
                                                        </div>
                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Họ và tên <span style="color:red">* </span>:</label>
                                                            <input type="text" class="form-control" id="tenphim" name="hoten" tabindex="1" value="@item.fullname" readonly required maxlength="20">
                                                        </div>
                                                        @if (item.gender == 0)
                                                        {
                                                            <div class="col-6">
                                                                <label for="category-film" class="col-form-label">Giới tính:</label>
                                                                <input type="text" class="form-control" id="dienvien" value="Nữ" name="sdt" tabindex="2" readonly required>
                                                            </div>
                                                        }
                                                        else
                                                        {
                                                            <div class="col-6">
                                                                <label for="category-film" class="col-form-label">Giới tính:</label>
                                                                <input type="text" class="form-control" id="dienvien" value="Nam" name="sdt" tabindex="2" readonly required>
                                                            </div>
                                                        }

                                                    </div>
                                                    <div class="row">
                                                        <div class="col-6">
                                                            <label for="category-film" class="col-form-label">Lớp :</label>
                                                            <input type="text" class="form-control" id="dienvien" value="@item.grade" name="sdt" tabindex="2" readonly required>
